<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2 class="mt-2">会員情報編集</h2>
      <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mt-2">
          <%= f.label :family_name %>/<%= f.label :first_name %><br />
          <%= f.text_field :family_name %>/<%= f.text_field :first_name %>
        </div>
        <div class="field mt-2">
          <%= f.label :family_name_kana %>/<%= f.label :first_name_kana %><br />
          <%= f.text_field :family_name_kana %>/<%= f.text_field :first_name_kana %>
        </div>
        <div class="field mt-2">
          <%= f.label :postcode %><br />
          <%= f.text_field :postcode %>
        </div>
        <div class="field mt-2">
          <%= f.label :address %><br />
          <%= f.text_field :address %>
        </div>
        <div class="field mt-2">
          <%= f.label :phone_number %><br />
          <%= f.text_field :phone_number %>
        </div>
        <div class="field mt-2">
          <%= f.label :email %><br />
          <%= f.email_field :email %>
        </div>


        <div class="actions mt-3">
          <%= f.submit "編集内容を保存", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>

    <div class="col-md-2 d-flex flex-column-reverse offset-">
    <%= link_to "退会する", customers_confirm_path, {class: "btn btn-danger"} %>
    </div>
  </div>
</div>