<div class="container">
  <h2 class="col mt-4">注文履歴一覧画面</h2>
  <div class="row">
    <div class="col-12 mt-2">
      <table class="table table-hover text-center">
        <thead class="table-active">
          <tr>
            <th>購入日時</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at.strftime("%Y-%m-%d %H:%M"), managers_order_path(order) %></td>
            <td><%= order.order_products.sum(:quantity) %></td>
            <td><%= order.status %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
