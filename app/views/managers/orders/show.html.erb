<h2>注文履歴詳細</h2>
<div class="container">
  <div class="row">
    <div>
      <table class="table table-borderless">
        <tr>
          <th class="col-6">購入者</th>
          <td class="col-6">
          <%= link_to managers_customer_path(@customer.id) do %>
          <%= @customer.family_name %><%= @customer.first_name %><%= @customer.family_name %><%= @customer.first_name_kana %>
          <% end %>
          </td>
        </tr>
        <tr>
          <th class="col-6">注文日</th>
          <td class="col-9"><%= @order.created_at.strftime("%Y/%m/%d") %></td>
        </tr>
        <tr>
          <th class="col-6">支払方法</th>
          <td class="col-12"><%= @order.payment_method %></td>
        </tr>
      </table>
    </div>
  </div>
</div>



<div class="col-7 ml-3">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>商品名</th>
                <th>単価(税込)</th>
                <th>数量</th>
                <th>小計</th>
            </tr>
        </thead>
        <tbody>

          <% @order.order_products.each do |f| %>
            <tr>
                <td><%= f.product.name %></td>
                <td><%= (f.product.price * 1.1).floor %>円</td>
                <td><%= f.quantity %></td>
                <td><%= (f.product.price * 1.1).floor * f.quantity %>円</td>
            </tr>
          <% end %>
        </tbody>
    </table>
  </div>
