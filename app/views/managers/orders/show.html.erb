<div class="container my-5">
<h2>注文履歴詳細</h2>
  <div class="row">
    <div>
      <table class="table table-borderless">
        <tr>
          <th>購入者</th>
          <td>
          <%= link_to managers_customer_path(@customer.id) do %>
          <%= @customer.family_name %><%= @customer.first_name %>
          <% end %>
          </td>
        </tr>
        <!--<tr>-->
            <!--<th>配送先</th>-->
        <!--    % if @order.address %>-->
        <!--    % delivery = Delivery.find(@order.address) %>-->
        <!--    <td>%= "〒" + delivery.postcode + "  " + delivery.address + "  " + delivery.family_name + delivery.first_name %></td>-->
        <!--    % else %>-->
        <!--    <td>%= @order.address %></td>-->
        <!--    % end %>-->
        <!--  </tr>-->
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <th>注文ステータス</th>
            <td>
               <%= form_with model: @order, url: managers_order_status_path(@order), method: :patch, local: true do |f| %>
                <%= f.select :status, [["入金待ち", "入金待ち"], ["入金確認","入金確認"],["製作中","製作中"],["発送準備中","発送準備中"],["発送済み","発送済み"]], class: "form-control" %>
                <%= f.submit "更新", class: "btn btn-primary btn-sm" %>
                <% end %>
            </td>
        </tr>
      </table>
    </div>
  </div>
</div>
  <div class="row mt-3">
    <div class="col-1">
    </div>
<div class="col-7 ml-3">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>商品名</th>
                <th>単価(税込)</th>
                <th>数量</th>
                <th>小計</th>
                <th>製作ステータス</th>
            </tr>
        </thead>
        <tbody>
          <% @order.order_products.each do |order_product| %>
            <tr>
                <td><%= order_product.product.name %></td>
                <td><%= (order_product.product.price * 1.1).floor %>円</td>
                <td><%= order_product.quantity %></td>
                <td><%= (order_product.product.price * 1.1).floor * order_product.quantity %>円</td>
                <td>
                <%= form_for (order_product), url: managers_item_status_path(order_product, order_id: @order.id) do |f| %>
                  <%= f.select :make_status, [["着手不可", "着手不可"], ["製作待ち","製作待ち"], ["製作中","製作中"], ["製作完了","製作完了"]] %>
                  <%= f.submit "更新", class: "btn btn-primary btn-sm ml-3" %>
                  <% end %>
                </td>
            </tr>
          <% end %>
        </tbody>
    </table>
  </div>
    <div class="col-3">
      <table class="table table-borderless">
        <tr>
          <th>商品合計</th><td><%= (@order.bill - 800).to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <th>送料</th><td>800円</td>
        </tr>
        <tr>
          <th>請求金額合計</th><td><%= @order.bill.to_s(:delimited) %>円</td>
          </tr>
          <tr>
        </tr>
      </table>
    </div>
  </div>
</div>