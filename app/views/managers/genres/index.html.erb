<div class="container">
  <div class="row">
    <div class="col-12">
    <h2 class="col mt-4">ジャンル一覧・追加</h2>
      <%= form_with model: @genre, url: managers_genres_path, local: true do |f| %>
        ジャンル名<%= f.text_field :name, class: 'mx-5' %><%= f.submit '新規登録', class: 'btn btn-success ' %>
      <% end %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-5">
    <table class="table table-border text-center">
      <thead class="table-active">
        <tr>
          <th>ジャンル</th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= genre.name %>
          </td>
          <td>
            <%= link_to '編集する', edit_managers_genre_path(genre), class: 'btn btn-sm btn-success' %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>