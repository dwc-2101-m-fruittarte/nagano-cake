<div class="container">
<h2><%= @customer.family_name %><%= @customer.first_name %>さんの会員情報編集</h2>
  <div class="row">
    <div class="my-5">
      <%= form_with model:@customer, url:managers_customer_path(@customer),local:true do |f| %>
        <table class="table table-borderless">
          <tr class="d-flex">
            <th class ="col-3"><%= f.label :"会員ID" %></th>
            <td class ="col-9"><%= f.label :"#{@customer.id}" %></td>
          </tr>
          <tr class="d-flex">
            <th class="col-3"><%= f.label :"氏名" %></th>
            <td class="col-9"><%= f.text_field :family_name %><%= f.text_field :first_name %></td>
          </tr>
          <tr class="d-flex">
            <th class="col-3"><%= f.label :"フリガナ" %></th>
            <td class="col-9"><%= f.text_field :family_name_kana %><%= f.text_field :first_name_kana %></td>
          </tr>
          <tr class="d-flex">
            <th class="col-3"><%= f.label :"郵便番号" %></th>
            <td class="col-9"><%= f.text_field :postcode %></td>
          </tr>
          <tr class="d-flex">
            <th class="col-3"><%= f.label :"住所" %></th>
            <td class="col-9"><%= f.text_field :address, size: 80 %></td>
          </tr>
          <tr class="d-flex">
            <th class="col-3"><%= f.label :"電話番号" %></th>
            <td class="col-9"><%= f.text_field :phone_number %></td>
          </tr>
          <tr class="d-flex">
            <th class="col-3"><%= f.label :"メールアドレス" %></th>
            <td class="col-9"><%= f.text_field :email %></td>
          </tr>
          <tr class="d-flex">
            <th class="col-3"><%= f.label :"会員ステータス" %></th>
            <td class="col-9">
              <%= f.radio_button :is_deleted, false %>
              <%= f.label :is_deleted, "有効" %>
              <%= f.radio_button :is_deleted, true %>
              <%= f.label :is_deleted, "退会" %>
            </td>
          </tr>
        </table>
        <div>
          <%= f.submit "変更を保存する", class: "btn btn-success"%>
        </div>
      <% end %>
    </div>
  </div>
</div>