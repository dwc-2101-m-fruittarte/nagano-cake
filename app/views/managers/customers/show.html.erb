<div class="container">
<h2><%= @customer.family_name %><%= @customer.first_name %>さんの会員詳細</h2>
  <%= flash[:success] %>
  <div class="row">
    <div>
      <table class="table table-borderless">
        <tr>
          <th>顧客ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @customer.family_name %><%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @customer.family_name %><%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postcode %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
            <% if @customer.is_deleted == true %>
              <p class = "text-secondary">無効</p>
            <% elsif @customer.is_deleted == false %>
              <p class = "text-success">有効</p>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
<div class="row">
  <div style="padding: 20px;">
  <%= link_to "編集する",edit_managers_customer_path(@customer), class: "btn btn-success" %>
  </div>
  <div style="padding: 20px;">
  <%= link_to " 注文履歴一覧を見る", managers_orders_path, class: "btn btn-primary" %>
  </div>
</div>