<div class="container">
<h2><%= @customer.family_name %><%= @customer.first_name %>さんの会員詳細</h2>
  <%= flash[:success] %>
  <div class="row">
    <div>
      <table class="table table-borderless">
        <tr>
          <th class="col-6">顧客ID</th>
          <td class="col-6"><%= @customer.id %></td>
        </tr>
        <tr>
          <th class="col-6">氏名</th>
          <td class="col-6"><%= @customer.family_name %><%= @customer.first_name %></td>
        </tr>
        <tr>
          <th class="col-6">フリガナ</th>
          <td class="col-9"><%= @customer.family_name %><%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th class="col-6">郵便番号</th>
          <td class="col-3"><%= @customer.postcode %></td>
        </tr>
        <tr>
          <th class="col-6">住所</th>
          <td class="col-12"><%= @customer.address %></td>
        </tr>
        <tr> 
          <th class="col-6">電話番号</th>
          <td class="col-12"><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th class="col-6">メールアドレス</th>
          <td class="col-3"><%= @customer.email %></td>
        </tr>
        <tr>
          <th class="col-6">会員ステータス</th>
          <td class="col-3">
            <% if @customer.is_deleted == true %>
              <p class = "text-secondary">無効</p>
            <% elsif @customer.is_deleted == false %>
              <p class = "text-success">有効</p>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
<div class="row">
  <div style="padding: 20px;">
  <%= link_to "編集する",edit_managers_customer_path(@customer), class: "btn btn-success" %>
  </div>
  <div style="padding: 20px;">
  <%= link_to " 注文履歴一覧を見る", managers_orders_path, class: "btn btn-primary" %>
  </div>
</div>