<div class="container my-5">
  <div class="row">
    <h2 class="col-4 md-2">商品編集</h2>
    <%= form_with model: @product, url:managers_product_path, method: :patch, local:true do |f| %>

    <div class="form-group">
      <%= f.label :商品画像, class: "col-sm-4" %>
      <%= f.attachment_field :image, class: "form-control col-sm-7" %>
    </div>

    <div class="form-group">
      <%= f.label :商品名, class: "col-sm-4" %>
      <%= f.text_field :name, class: "form-control col-sm-7" %>
    </div>

    <div class="form-group">
      <%= f.label :商品説明, class: "col-sm-4" %>
      <%= f.text_area :introduction, class: "form-control col-sm-7" %>
    </div>

    <div class="form-group">
      <%= f.label :ジャンル, class: "col-sm-4" %>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, { selected: @product.genre.id }, class: 'form-control col-sm-7' %>
    </div>

    <div class="form-group">
      <%= f.label :税抜価格, class: "col-sm-4" %>
      <%= f.text_field :price, class: "form-control col-sm-7" %>
      <span class="mt-auto ml-3">円</span>
    </div>

    <div class="col-sm-4 mt-auto mt-2">
      <%= f.submit "編集を保存", class: "btn btn-sm btn-success" %>
    </div>
    <% end %>
  </div>
</div>