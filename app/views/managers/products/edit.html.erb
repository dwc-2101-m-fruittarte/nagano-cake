<div class="container mt-2">
  <div class="row">
    <h2>商品編集</h2>
  </div>
  
  <div class="row text-content-center">
    <div class="offset-sm-4 col-sm-3">
    <%= form_with model: @product, url:managers_product_path, method: :patch, local:true do |f| %>
    
    <div class="form-group">
      <%= f.label :商品画像, class: "col-sm-6" %>
      <%= f.attachment_field :image, class: "form-control col-sm-10" %>
    </div>
  
    <div class="form-group">
      <%= f.label :商品名, class: "col-sm-6" %>
      <%= f.text_field :name, class: "form-control col-sm-10" %>
    </div>
  
    <div class="form-group">
      <%= f.label :商品説明, class: "col-sm-6" %>
      <%= f.text_area :introduction, class: "form-control col-sm-10" %>
    </div>
  
    <div class="form-group">
      <%= f.label :ジャンル, class: "col-sm-6" %>
      <!--ジャンル項目-->
    </div>
  
    <div class="form-group">
      <%= f.label :税抜価格, class: "col-sm-6" %>
      <%= f.text_field :price, class: "form-control col-sm-10" %>
      <span class="mt-auto ml-3">円</span>
    </div>
  
    <div class="col-sm-4 mt-auto mt-2">
      <%= f.submit "編集を保存", class: "btn btn-sm btn-success" %>
    </div>
    <% end %>
    </div>
  </div>
</div>