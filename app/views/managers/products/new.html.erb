<div class="container my-5">
  <div class="row">
    <h2 class="col-4 md-2">商品新規登録</h2>
    <%= form_with model: @product, url: managers_products_path, method: :post, local:true do |f| %>
      <div class="form-group row">
        <%= f.label :商品画像, class: "col-sm-4" %>
        <%= f.attachment_field :image, class: "form-control col-sm-7" %>
      </div>

      <div class="form-group row">
        <%= f.label :商品名, class: "col-sm-4" %>
        <%= f.text_field :name, class: "form-control col-sm-7" %>
      </div>

      <div class="form-group row">
        <%= f.label :商品説明, class: "col-sm-4" %>
        <%= f.text_area :introduction, class: "form-control col-sm-7" %>
      </div>

      <div class="form-group row">
        <%= f.label :ジャンル, class: "col-sm-4" %>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, { prompt: '--選択してください--' }, class: 'form-control col-sm-7' %>
      </div>

      <div class="form-group row">
        <%= f.label :税抜き価格, class: "col-sm-4" %>
        <%= f.text_field :price, class: "form-control col-sm-7" %>  円
      </div>
      
      <div class="form-group row">
        <!--販売ステータス-->
      </div>

      <div class="col-sm-4 mt-auto mt-2">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>
  </div>
</div>