<div class="row mt-1">
    <table class="table table-hover text-center">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <!--<td>%= link_to product.name, manager_item_path(product) %></td>-->
            <td><%= product.price %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>



  <div class="container my-5">
  <div class="row">
    <h2>商品 新規登録画面</h2>
  </div>

  <%= form_with model: @product, local:true do |f| %>

    <div class="row mt-5">
      <div class="col-sm-4">
        <%= f.label :商品画像 %>
        <%= f.attachment_field :image %>
      </div>

      <div class="col-sm-5">
        <div class="form-group row">
          <%= f.label :商品名, class: "col-sm-4" %>
          <%= f.text_field :name, class: "form-control col-sm-8" %>
        </div>

        <div class="form-group row">
          <%= f.label :商品説明, class: "col-sm-4" %>
          <%= f.text_area :introduction, class: "form-control col-sm-8" %>
        </div>

        <div class="form-group row">
          <%= f.label :税抜き価格, class: "col-sm-4" %>
          <%= f.text_field :price, class: "form-control col-sm-7" %>
          <span class="mt-auto ml-3">円</span>
        </div>

      <div class="col-sm-2 mt-auto ml-5">
        <%= f.submit "新規登録" %>
      </div>
    </div>
  <% end %>
</div>