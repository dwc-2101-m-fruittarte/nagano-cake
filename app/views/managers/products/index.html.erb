<div class="container">
  <div class="row">
    <div class="col-12 mx-auto">
      <div class="d-flex justify-content-between mt-4">
        <h2>商品一覧</h2>
        <div class="pull-right">
          <%= link_to "＋", new_managers_product_path, class: "btn btn-outline-dark rounded-circle p-10 m-2" %>
        </div>
      </div>
      <table class="table table-hover text-center mt-2">
        <thead class="table-active">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>販売ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td>
              <%= link_to managers_product_path(product.id) do %>
              <%= product.name %>
              <% end %>
            </td>
            <td><%= product.price %></td>
            <td><%= product.genre.name %></td>
            <td></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>