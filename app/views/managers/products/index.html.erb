<h2>商品一覧</h2>
<%= link_to "商品登録", new_managers_product_path, class: "btn btn-info" %>
<div class="row mt-1">
    <table class="table table-hover text-center">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>販売ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= link_to managers_product_path(product.id) do %>
              <%= product.name %>
            <% end %></td>
            <td><%= product.price %></td>
             <td><%= product.is_active %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
