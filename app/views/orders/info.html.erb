<h2>注文情報確認</h2>
<% @cart_items.each do |cart_item| %>
<div class="col-7 ml-3">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>商品名</th>
                <th>単価(税込)</th>
                <th>数量</th>
                <th>小計</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><%= cart_item.product.name %></td>
                <td><%= (cart_item.product.price * 1.1).floor %>円</td>
                <td><%= cart_item.quantity %></td>
                <td><%= (cart_item.product.price * 1.1).floor * cart_item.quantity %>円</td>
            </tr>
        </tbody>
    </table>
</div>
<% end %>
<div class="col-3 ml-3">
  <table class="table table-bordered">
      <tr>
        <th>送料</th><td>800円</td>
      </tr>

      <tr>
        <th>商品合計</th><td><%= (@total_price * @tax ).to_i.to_s(:delimited, delimiter: ',') %>円</td>
      </tr>

      <tr>
        <th>請求額</th><td><%= (@total_price * @tax + 800).to_i.to_s(:delimited, delimiter: ',') %>円</td>
      </tr>
  </table>
</div>

<h2>支払い方法</h2>
<%= @order.payment_method %>

<%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
  <%= f.submit "注文を確定する", class: " btn btn-primary" %>
<% end %>