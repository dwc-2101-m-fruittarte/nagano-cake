<div class="container my-5">
  <div class="row">
    <div class="offset-1">
      <h2 class="red-border px-3">注文情報確認</h2>
    </div>
  </div>

  <div class="row mt-3">
    <div class="offset-1 col-7">

      <table class="table table-borderless table-sm ">
        <thead>
          <tr class="red-border">
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>

        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr class="brown-border">
              <td>
                <!--%= attachment_image_tag cart.item, :image, :size => '50x50',fallback: "no_image.jpg" %>-->
                <span> </span>
                <%= cart_item.product.name %>
              </td>

              <td class="align-middle"><%= (cart_item.product.price * 1.1).floor %>円</td>

              <td class="align-middle"><%= cart_item.quantity %></td>

              <td class="align-middle"><%= cart_item.subtotal_price %>円</td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>

    <div class="col-2 d-flex">

      <table class="table table-sm table-borderless align-self-end">
        <tbody>
          <tr class="brown-border">
            <td>送料</td>
            <td>800</td>
          </tr>

          <tr class="brown-border">
            <td>商品合計</td>
            <td><%= @order.bill - 800 %>円</td>
          </tr>

          <tr class="brown-border">
            <td>請求金額</td>
            <td><%= @order.bill %>円</td>
          </tr>

        </tbody>
      </table>

    </div>
  </div>


  <div class="row mt-5">
    <div class="offset-2 col-6">
      <div class="row mt-3">
        <strong class="red-border px-3 mr-3">支払方法</strong>
        <span class="brown-border px-3"><%= @order.payment_method %></span>
      </div>

      <div class="row mt-3">
        <strong class="red-border px-3 mr-3">　お届け先　</strong>
        <span class="brown-border px-3">
          <% if  session[:address].length < 8 %>
           <%= "〒" + @address.post_code + "  " + @address.address + "  " + @address.family_name + @address.first_name %><span>様</span>
          <% else %>
            <%= session[:address] %><span>様</span>
          <% end %>
        </span>
      </div>
    </div>

    <div class="col-3">
      <%= form_with model: @order, url: orders_path, method: :post,local: true do |f| %>
        <%= f.hidden_field :bill, :value => @order.bill %>
        <%= f.submit "注文を確定する", class: " btn btn-primary" %>
      <% end %>
    </div>

  </div>
</div>