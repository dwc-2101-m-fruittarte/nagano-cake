<div class="container my-5">
  <div class="row">
    <div class="offset-1">
      <h2 class="red-border px-3">注文内容</h2>
    </div>
  </div>

  <div class="row mt-3">
    <div class="offset-1 col-7">

      <table class="table table-borderless table-sm ">
        <thead>
          <tr class="red-border">
            <th>商品</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>

        <tbody>
          <% current_customer.cart_items.each do |cart| %>
            <tr class="brown-border">
              <td>
                <%= attachment_image_tag cart.product, :image, :size => '50x50',fallback: "no_image.jpg" %>
                <span> </span>
                <%= cart.product.name %>
              </td>

              <td class="align-middle"><%= (cart.product.price * 1.1).floor %></td>

              <td class="align-middle"><%= cart.quantity %></td>

              <td class="align-middle"><%= (cart.product.price * 1.1).floor * cart.quantity %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>

    <div class="col-2 d-flex">

      <table class="table table-sm table-borderless align-self-end">
        <tbody>

          <tr class="brown-border">
            <td>請求金額</td>
            <td><%= @total_price + 800 %></td>
          </tr>

        </tbody>
      </table>

    </div>
  </div>

