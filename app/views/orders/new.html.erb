<div class="container my-5">
  <div class="row">
    <div class="offset-1">
      <h2 class="red-border px-3">注文情報入力</h2>
    </div>
  </div>

  <div class="row mt-5">
    <div class="offset-2 col-5">

      <div class="row">
        <strong class="red-border px-3">支払方法</strong>
      </div>

      <%= form_with model: @order, url: info_orders_path, method: :post,local: true do |f| %>
        <div class="form-check mt-3">
          <label><%=f.select :payment_method, Order.payment_methods.keys %></label><br>
                 <%= f.hidden_field :bill, :value => @order.bill %>
        </div>

        <div class="row mt-3">
          <strong class="red-border px-3">お届け先</strong>
        </div>

        <div class="form-check mt-3">
          <% address = current_customer.postcode + current_customer.address + current_customer.family_name + current_customer.first_name %>
          <%= radio_button_tag :select, :my_address %>
          <%= label_tag :select, "ご自身の住所", {value: :my_address, style: "display: inline-block;"} %>
          <%= address %><br>
          <%= radio_button_tag :select, :select_address %>
          <%= f.collection_select :deliveries_id, @deliveries, :id, :display_address , class: "form-control"%>
          <!--# %= select_tag :address, options_for_select(@deliveries.map do |d|-->
          <!--# ["〒" + d.postcode + "  " + d.address + "  " + d.family_name + d.first_name, d.id]-->
          <!--  end), {include_blank: '配送先を選択'} %>-->
        </div>

        <div class="row mt-5">
          <%= f.submit '確認画面へ進む', class: "btn btn-sm btn-outline-danger ml-auto" %>
        </div>

    </div>

    <div class=" offset-1 col-3">

      <div class="row">
          <%= radio_button_tag :select, :new_address %>
        <strong class="red-border px-3">新しいお届け先</strong>
      </div>

        <div class="form-group row mt-3">
          <%= f.text_field :postcode, placeholder: "郵便番号", class: "form-control offset-1 col-10" %>
        </div>

        <div class="form-group row">
          <%= f.text_field :address, placeholder: "住所", class: "form-control offset-1 col-10" %>
        </div>

        <div class="form-group row">
          <%= f.text_field :name, placeholder:"宛名", class: "form-control offset-1 col-5" %>
        </div>

        <div class="row">
          <%= f.submit '確認画面へ進む', class: "btn btn-sm btn-outline-danger ml-auto" %>
          <% end %>
        </div>
    </div>
  </div>
</div>


