<div class="row mt-5">
    <div class="offset-1">
      <h2><strong class="red-border px-3">注文履歴一覧</strong></h2>
    </div>
  </div>

  <div class="row mt-3">
    <div class="offset-1 col-9">

      <table class="table table-bordered">
        <thead>
          <tr class="red-border">

            <th>注文日</th>
            <th>注文商品</th>
            <th>支払い金額</th>
            <th>注文詳細</th>
          </tr>
        </thead>

        <% @order_products.each do |op| %>
        <tbody>
          <tr class="brown-border">
            <td><%= op.created_at.strftime("%Y/%m/%d") %></td>
            <td><%= op.product.name %></td>
            <td><%= (@total_price * @tax + 800).to_i.to_s(:delimited, delimiter: ',') %>円</td>
            <td><%= link_to "表示する", "order_path", class: " btn btn-primary" %></td>
          </tr>
        </tbody>
        <% end %>
      </table>

    </div>
  </div>

</div>
