<div class="container my-5">
  <div class="row">
    <div class="offset-1">
      <h2 class="red-border px-3">注文履歴一覧</h2>
      <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>注文日</th>
          <th>配送日</th>
          <th>注文商品</th>
          <th>支払い金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
          <th colspan="3"></th>
        </tr>
      </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
              <td>
            		〒<%= order.postcode %><br>
            		<%= order.address%><br>
            		<%= order.name %>
              </td>
              <td><%= order.name %></td>
              <td>円</td>
              <td><%= order.status %></td>
              <td><%= link_to "詳細", order_path(order.id), :class => "btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
    </table>